# RAGBOARD Frontend Environment Variables Example
# Copy this file to .env.local and update with your values

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000/ws

# AI API Keys (Optional - backend can handle these)
VITE_CLAUDE_API_KEY=
VITE_OPENAI_API_KEY=

# S3 Configuration (Optional - for direct upload)
VITE_S3_BUCKET=
VITE_S3_REGION=

# Development Settings
VITE_DEBUG=false
VITE_LOG_LEVEL=info

# Feature Flags
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_VECTOR_SEARCH=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_WEBSOCKETS=true

# UI Settings
VITE_APP_NAME=RAGBOARD
VITE_APP_VERSION=1.0.0
VITE_THEME=light

# Performance Settings
VITE_API_TIMEOUT=30000
VITE_MAX_FILE_SIZE=104857600
VITE_CHUNK_SIZE=1048576

# Allowed file extensions
VITE_ALLOWED_EXTENSIONS=pdf,docx,txt,jpg,jpeg,png,mp3,mp4,wav,webm