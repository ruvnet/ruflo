{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "ES2022"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "composite": true,
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@claude-flow/core": [
        "./@claude-flow/core/src"
      ],
      "@claude-flow/cli": [
        "./@claude-flow/cli/src"
      ],
      "@claude-flow/agents": [
        "./@claude-flow/agents/src"
      ],
      "@claude-flow/memory": [
        "./@claude-flow/memory/src"
      ],
      "@claude-flow/integrations": [
        "./@claude-flow/integrations/src"
      ],
      "@claude-flow/plugins": [
        "./@claude-flow/plugins/src"
      ]
    },
    "emitDeclarationOnly": false
  },
  "references": [
    {
      "path": "./@claude-flow/core"
    },
    {
      "path": "./@claude-flow/cli"
    },
    {
      "path": "./@claude-flow/agents"
    },
    {
      "path": "./@claude-flow/memory"
    },
    {
      "path": "./@claude-flow/integrations"
    },
    {
      "path": "./@claude-flow/plugins"
    }
  ],
  "include": [],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
