# RAGBOARD Backend Environment Variables Example
# Copy this file to .env and update with your values

# App Configuration
APP_NAME=RAGBOARD
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false
WORKERS=4

# Database Configuration
# For SQLite (simple, no setup required):
DATABASE_URL=sqlite+aiosqlite:///./ragboard.db

# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dbname

# Security - MUST CHANGE IN PRODUCTION!
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# File Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600

# AI Services (Optional - leave empty to disable)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEFAULT_AI_MODEL=gpt-3.5-turbo

# Vector Database - ChromaDB (Local)
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=ragboard_vectors

# Redis Configuration (Optional - for caching and real-time features)
# Redis is optional for local development
# REDIS_URL=redis://localhost:6379/0

# AWS S3 (Optional - for cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# WebSocket Settings
WS_MESSAGE_QUEUE_SIZE=100
WS_HEARTBEAT_INTERVAL=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Transcription Settings (Optional)
WHISPER_MODEL=base
WHISPER_DEVICE=cpu

# OCR Settings (Optional)
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGES=eng